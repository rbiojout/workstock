<%= simple_form_for(@work_day) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, collection: ["Lundi","Mardi","Mercredi","Jeudi","Vendredi","Samedi","Dimanche"] %>
    <%= f.association :slots, collection: Slot.all.order(:start_time), as: :check_boxes, label_method: :start_time %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
